{
    "name": "RStudio with renv",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "quarto.quarto",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "reditorsupport.r",
                "streetsidesoftware.code-spell-checker",
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    },
    "remoteEnv": {
        "ROOT": "TRUE"
    },
    "mounts": [
        "source=${localEnv:HOME}/.config/gcloud,target=/home/rstudio/.config/gcloud,type=bind"
    ]
}
